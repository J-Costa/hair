<div class="container border-solid border border-gray-600 rounded-lg">
  <%= render "shared/simple_alert" %>
  <div class="content-center p-4">
    <div class="flex justify-between mb-4">
      <h1 class="mt-2 ml-4 text-xl font-semibold">Serviços</h1>
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Menu
        </button>
        <div x-show="open" class="mt-2">
          <%= link_to 'Cadastrar Serviço', new_admin_professional_service_path(@professional), class: "block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
      <div class="hidden md:block">
        <%= link_to 'Cadastrar Serviço', new_admin_professional_service_path(@professional), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded " %>
      </div>
    </div>
    <div class="overflow-x-auto overflow-auto border-solid">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Descrição</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duração</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Preço</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @services.any? %>
            <%= render @services %>
          <% else %>
            <td class="px-6 py-4 whitespace-nowrap" colspan="4">
              <div class="text-sm text-gray-900 text-center">
                Nenhum serviço cadastrado
                <%= link_to new_admin_professional_service_path(@professional), data: { turbo_frame: '_top' }, class: "text-blue-600 inline-flex items-center hover:text-white border border-blue-600 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-600 dark:focus:ring-blue-900 hover:text-white" do %>
                  <svg class="w-5 h-5 mr-1 fill-current" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 17h6m-3 3v-6M4.857 4h4.286c.473 0 .857.384.857.857v4.286a.857.857 0 0 1-.857.857H4.857A.857.857 0 0 1 4 9.143V4.857C4 4.384 4.384 4 4.857 4Zm10 0h4.286c.473 0 .857.384.857.857v4.286a.857.857 0 0 1-.857.857h-4.286A.857.857 0 0 1 14 9.143V4.857c0-.473.384-.857.857-.857Zm-10 10h4.286c.473 0 .857.384.857.857v4.286a.857.857 0 0 1-.857.857H4.857A.857.857 0 0 1 4 19.143v-4.286c0-.473.384-.857.857-.857Z"/>
                  </svg>
                  Cadastrar Serviços
                <% end %>
              </div>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>