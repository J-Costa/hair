<div class="">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">E-mail</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telefone</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Administrador</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= professional.name || "N/D" %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= professional.email || "N/D" %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= professional.phone || "N/D" %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if professional.admin? %>
              <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">SIM</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to 'Editar', edit_admin_professional_path(professional), class: "text-blue-600 hover:text-blue-900" %>
            </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to 'Excluir', admin_professional_path(professional), method: :delete, data: { confirm: 'Tem certeza?' }, class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>