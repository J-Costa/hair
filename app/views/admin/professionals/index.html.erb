<turbo-frame id="professionals">
  <%= render "shared/simple_alert" %>
  <div class="content-center p-4">
    <div class="flex justify-between mb-4">
      <h1 class="mt-2 ml-4 text-xl font-semibold">Profissionais</h1>
      <div class="md:hidden" x-data="{ open: false }">
        <button @click="open = !open" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Menu
        </button>
        <div x-show="open" class="mt-2">
          <%= link_to 'Cadastrar Profissional', new_admin_professional_path, class: "block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      </div>
      <div class="hidden md:block">
        <%= link_to 'Cadastrar Profissional', new_admin_professional_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded " %>
      </div>
    </div>
    <div class="overflow-x-auto overflow-auto border-solid">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">E-mail</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Telefone</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Administrador</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <%= render @professionals %>
        </tbody>
      </table>
    </div>
  </div>
</turbo-frame>